---
// Importamos las svg icons
import Skill1 from "../assets/skill/astroIcon.astro";
import Skill2 from "../assets/skill/bootstrapIcons.astro";
import Skill3 from "../assets/skill/htmlIcon.astro";
import Skill4 from "../assets/skill/tailwindIcon.astro";
import Skill5 from "../assets/skill/nodeIcon.astro";
import Skill6 from "../assets/skill/cssIcon.astro";
import Skill7 from "../assets/skill/githubIcon.astro";
import Skill8 from "../assets/skill/jsIcon.astro";
import Skill9 from "../assets/skill/reactIcon.astro";
import Skill10 from "../assets/skill/tsIcon.astro";
import Skill11 from "../assets/skill/sqliteIcon.astro";
import Skill12 from "../assets/skill/posgreIcon.astro";
import Skill13 from "../assets/skill/mysqlIcon.astro";
import Skill14 from "../assets/skill/mariadbIcon.astro";
import Skill15 from "../assets/skill/mongoIcon.astro";
import Skill16 from "../assets/skill/firebaseIcon.astro";
import Skill17 from "../assets/skill/electronIcon.astro";
import Skill18 from "../assets/skill/dockerIcon.astro";

const skillSlider = [
  Skill1,
  Skill2,
  Skill3,
  Skill4,
  Skill5,
  Skill6,
  Skill7,
  Skill8,
  Skill9,
  Skill10,
  Skill11,
  Skill12,
  Skill13,
  Skill14,
  Skill15,
  Skill16,
  Skill17,
  Skill18,
];
---

<div class="slider">
  <div class="slide-track gap-6">
    {
      skillSlider.map((Skill) => (
        <div class="slide">
          <Skill class="skill-icon" />
        </div>
      ))
    }

    <!-- Duplicate slides for infinite effect -->
    {
      skillSlider.map((Skill) => (
        <div class="slide">
          <Skill class="skill-icon" />
        </div>
      ))
    }
  </div>
</div>

<style>
  .slider {
    height: auto;
    margin: auto;
    overflow: hidden;
  }

  .slider .slide-track {
    display: flex;
    animation: scroll 40s linear infinite;
    -webkit-animation: scroll 40s linear infinite;
    width: calc(200px * 14);
    margin: 20px;
  }

  .slider .slide {
    width: 200px;
  }

  .slider .slide img {
    display: flex;
    height: 80%;
    width: 80%;
  }

  @keyframes scroll {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    100% {
      -webkit-transform: translateX(calc(-200px * 8));
      transform: translateX(calc(-200px * 8));
    }
  }

  @media (max-width: 767px) {
    .slider {
      width: auto;
      height: auto;
      margin: auto;
      padding: 5px;
    }
  }
</style>
