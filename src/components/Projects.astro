---
const PROJECTS = [
  {
    title: "Portafolio Web",
    description: "Desarrollador Web Frontend",
    link: "#",
    github: "https://github.com/SASOPELANA",
    image: "https://placehold.co/300x300",
    tags: ["HTML", "CSS", "JavaScript", "Astro", "TailwindCSS"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3>{title}</h3>
      <p>{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img src={image} alt={`Captura de pantalla del proyecto. ${title}`} />
    </article>
  ))
}
