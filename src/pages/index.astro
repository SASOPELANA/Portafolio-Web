---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/Linkendin.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import GmailIcon from "../components/icons/Mail.astro";
import ImagenSope from "../../public/imagen/sergio.jpeg";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import TitleSection from "../components/TitleSection.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
import Formulario from "../components/icons/Forms.astro";
import Form1 from "../components/Formualario.astro";
---

<Layout
  title="Portafolio de Sergio - Desarrolador y Programador Web"
  description="Contrata a SergioDev para crear tus aplicaciones web y contenido. Estudiante de la Tecnicatura Universitaria en Programación - UTN"
>
  <main class="px-4">
    <SectionContainer class="py-43 pb-32">
      <div class="flex md:justify-start justify-center items-center">
        <img
          class="rounded-full size-12 mb-4"
          src={ImagenSope.src}
          alt="sergio photo"
        />
      </div>
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, soy Sergio <a
          href="https://www.linkedin.com/in/sergio-alejandro-sopelana-b756aa290"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>

      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-red-200/90">
          Estudiante de la Tecnicatura Universitaria en Programación - UTN.</span
        ><span class="opacity-80 text-white/80"> Busco mi primer empleo como Frontend</span> -<span
          class="text-yellow-200/90"
        >
          Desarrollador Web</span
        ><span class="text-white/80">. De San Ramón de la Nueva Orán - Salta, Argentina</span> 🇦🇷.<br />
        <span class="text-gray-400/90">
          Apasionado por el desarrollo web, con ganas de aprender y crecer en el
          ámbito profesional.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/sergio-alejandro-sopelana-b756aa290"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkenIn
        </SocialPill>
        <SocialPill href="https://github.com/SASOPELANA">
          <GitHubIcon class="size-4 md:size-6" />

          GitHub
        </SocialPill>
        <SocialPill href="mailto:sopekof@gmail.com">
          <GmailIcon class="size-4 md:size-6" />

          sopekof@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <section>
        <h2 class="text-3xl font-semibold mb-6 flex gap-3 items-center text-white">
          <Briefcase class="size-7" />
          Experiencia en desarrollo web. Freelance.
        </h2>
        <Experience />
      </section>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <section>
        <h2 class="text-3xl font-semibold mb-6 flex gap-3 items-center text-white">
          <CodeIcon class="size-7" />
          Proyectos
        </h2>
        <Projects />
      </section>
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8 text-white" />
        <span class="text-white">Sobre Mi</span>
      </TitleSection>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contactos">
      <TitleSection>
        <Formulario class="size-8 text-white" />
        <span class="text-white">Contacto</span>
      </TitleSection>
      <Form1 />
    </SectionContainer>
  </main>
</Layout>
